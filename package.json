{
  "name": "@hifi/protocol",
  "description": "The Hifi fixed-rate, fixed-term lending protocol",
  "version": "1.0.0",
  "author": {
    "name": "Hifi",
    "email": "contact@hifi.finance",
    "url": "https://hifi.finance"
  },
  "bugs": {
    "url": "https://github.com/hifi-finance/hifi-protocol/issues"
  },
  "dependencies": {
    "@paulrberg/contracts": "^3.0.0"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@ethersproject/abi": "^5.1.2",
    "@ethersproject/abstract-signer": "^5.0.13",
    "@ethersproject/bignumber": "^5.0.14",
    "@ethersproject/bytes": "^5.1.0",
    "@ethersproject/constants": "^5.0.9",
    "@ethersproject/contracts": "^5.0.11",
    "@ethersproject/keccak256": "^5.0.8",
    "@ethersproject/providers": "^5.1.2",
    "@ethersproject/signing-key": "^5.0.10",
    "@ethersproject/strings": "^5.0.9",
    "@ethersproject/units": "^5.0.10",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.0.1",
    "@types/chai": "^4.2.18",
    "@types/fs-extra": "^9.0.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "chai": "^4.3.4",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^9.0.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.4",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.3.0",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "mocha": "^8.4.0",
    "prettier": "^2.3.0",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "shelljs": "^0.8.4",
    "shx": "^0.3.2",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^5.0.0",
    "typescript": "^4.2.4"
  },
  "files": [
    "/artifacts",
    "/contracts",
    "/typechain"
  ],
  "homepage": "https://github.com/hifi-finance/hifi-protocol#readme",
  "importSort": {
    ".js, .jsx": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "lending",
    "smart-contracts",
    "solidity"
  ],
  "license": "LGPL-3.0-or-later",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hifi-finance/hifi-protocol"
  },
  "scripts": {
    "clean": "hardhat clean",
    "commit": "git-cz",
    "compile": "hardhat compile",
    "coverage": "cross-env CODE_COVERAGE=true hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/{unit,integration}/**/*.ts\"",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prepare:package": "hardhat run scripts/prepare-package.ts",
    "prettier": "prettier --config ./.prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --check --config .prettierrc \"**/*.{js,json,md,sol,ts}\"",
    "test": "hardhat test",
    "test:integration": "hardhat test ./test/integration --network hardhat",
    "test:unit": "hardhat test ./test/unit --network hardhat",
    "typechain": "hardhat typechain"
  }
}
