{
  "name": "@hifi/constants",
  "description": "Constants shared across Hifi packages",
  "version": "1.0.0",
  "author": {
    "name": "Hifi",
    "email": "contact@hifi.finance",
    "url": "https://hifi.finance"
  },
  "bugs": {
    "url": "https://github.com/hifi-finance/hifi/issues"
  },
  "devDependencies": {
    "@ethersproject/bignumber": "^5.4.2",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "evm-fp": "^1.2.0",
    "from-exponential": "^1.1.1",
    "prettier": "^2.4.1",
    "shx": "^0.3.3",
    "typescript": "^4.4.3"
  },
  "files": [
    "/dist"
  ],
  "homepage": "https://github.com/hifi-finance/hifi/tree/main/packages/constants#readme",
  "main": "./dist/index.js",
  "private": true,
  "repository": {
    "directory": "packages/constants",
    "type": "git",
    "url": "https://github.com/hifi-finance/hifi"
  },
  "scripts": {
    "build:ts": "tsc --project ./tsconfig.json",
    "clean": "shx rm -rf ./dist ./tsconfig.tsbuildinfo",
    "clean:node_modules": "shx rm -rf ./node_modules",
    "lint": "yarn lint:ts && yarn prettier:check",
    "lint:ts": "eslint --config ../../.eslintrc.yaml --ignore-path ../../.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config ../../.prettierrc.js --ignore-path ../../.prettierignore --write \"**/*.{js,json,md,ts,yaml,yml}\"",
    "prettier:check": "prettier --check --config ../../.prettierrc.js --ignore-path ../../.prettierignore \"**/*.{js,json,md,ts,yaml,yml}\"",
    "watch": "yarn build --watch"
  },
  "types": "./dist/index.d.ts"
}
